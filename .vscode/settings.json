{
	"search.exclude": {
		"export/**/*.hx": true
	},
	"[haxe]": {
		"editor.formatOnSave": true,
		"editor.formatOnPaste": true,
		"editor.codeActionsOnSave": {
			"source.sortImports": true
		},
		"editor.snippetSuggestions": "bottom"
	},
	"haxe.enableExtendedIndentation": true,
	"codedox": {
		"commentend": "**/",
		"commentprefix": "\t",
		// "commentprefix": " * ",
		"commentdescription": "",
	}
}